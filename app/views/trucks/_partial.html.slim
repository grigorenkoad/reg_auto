=simple_fields_for @truck do |f|  
  =image_tag @truck.avatar_url, width:"300px"
  br
  =f.file_field :avatar
  br
  =f.input :brand
  br
  =f.input :fuel_type
  br
  =f.input :engine_capacity
  br
  =f.input :amount_guggage
  br
  =f.input :doors_count
  br
  =f.input :load_capacity
  br
  =f.input :cabin_for_sleeping
  br
  =f.button :submit
  br 
=link_to "Back", root_path
end
