=simple_form_for @bike, :url => { :controller => :bikes, :action => :update } do |f|
  =image_tag @bike.avatar_url, width:"200px"
  br
  =f.file_field :avatar
  br
  br
  =f.input :brand
  br
  =f.input :fuel_type
  br
  =f.input :engine_capacity
  br
  =f.input :max_speed
  br
  =f.button :submit
  br 
  br
=link_to "Back", root_path
end

